<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Anime Recommendation</title>
</head>
<body>
  <h1>Anime Recommendation</h1>
  <form action="/recommendation" method="POST">
    <input type="text" name="id" placeholder="Enter Anime ID" required />
    <button type="submit">Get Recommendations</button>
  </form>
  <div>
    <% if (locals.recommendations && locals.recommendations.length) { %>
      <h2>Recommendations:</h2>
      <ul>
        <% locals.recommendations.forEach(function(rec) { %>
          <li class="name"><%= rec %></li>
        <% }); %>
      </ul>
    <% } %>
  </div>
</body>
</html>